<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/steer" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500px"
        app:srcCompat="@drawable/key" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="700px"
        android:fontFamily="@font/montserrat"
        android:text="NEW\nCREDENTIALS"
        android:textColor="#000000"
        android:textSize="96px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102px"
        android:layout_marginTop="970px"
        android:textStyle="normal"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Your identity has been verified!\nSet your new password"
        android:textSize="48px" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1120px"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <EditText
        android:id="@+id/editTextNewConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1290px"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />


    <Button
        android:id="@+id/buttonUpdatePassword"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="599px"
        android:layout_marginTop="1500px"
        android:text="Update\nPassword"
        android:textSize="50px"
        app:cornerRadius="50px"
        app:rippleColor="#F23B5F" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-12dp"
        app:srcCompat="@drawable/bottom" />
    <!--
        <TextView
            android:id="@+id/textView7"
            android:layout_width="1080px"
            android:layout_height="50dp"
            android:layout_marginTop="1800px"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/box"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="48px"
            android:textStyle="normal" />
-->
    <TextView
        android:id="@+id/textViewHelp"
        android:layout_width="103dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="800px"
        android:drawableStart="@drawable/ic_help_vector"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Help"
        android:textColor="#ffffff"
        android:textSize="64px"
        android:textStyle="normal" />

</RelativeLayout>