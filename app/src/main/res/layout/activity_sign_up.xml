<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:paddingStart="10dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/steer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/montserrat"
        android:text="Sign Up"
        android:textSize="96px" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="500px"
        android:fontFamily="@font/montserrat"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="48px" />
    <EditText
        android:id="@+id/firstname_input_signup"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="570px"
        android:layout_marginLeft="50px"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=" " />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="700px"
        android:fontFamily="@font/montserrat"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="48px" />
    <EditText
        android:id="@+id/lastname_input_signup"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="770px"
        android:layout_marginLeft="50px"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=" " />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="900px"
        android:fontFamily="@font/montserrat"
        android:text="Contact Number"
        android:textColor="#000000"
        android:textSize="48px" />
    <EditText
        android:id="@+id/username_input_signup"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="970px"
        android:layout_marginLeft="50px"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=" " />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="1100px"
        android:fontFamily="@font/montserrat"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="48px" />
    <EditText
        android:id="@+id/address_input_signup"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="1170px"
        android:layout_marginLeft="50px"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text=" " />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="1300px"
        android:fontFamily="@font/montserrat"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="48px" />
    <EditText
        android:id="@+id/editTextPasswordSignUp"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1370px"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawablePadding="12dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="1500px"
        android:fontFamily="@font/montserrat"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:textSize="48px" />
    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1570px"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawablePadding="12dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="599px"
        android:layout_marginTop="1700px"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        app:cornerRadius="50px"
        app:rippleColor="#F23B5F" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="1850px"
        android:fontFamily="@font/montserrat"
        android:text="Not new user? "
        android:textColor="#000000"
        android:textSize="36px" />
    <TextView
        android:id="@+id/textViewLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320px"
        android:layout_marginTop="1850px"
        android:fontFamily="@font/montserrat"
        android:text="Go back to log in"
        android:textColor="#FF0000"
        android:textSize="36px" />





</RelativeLayout>